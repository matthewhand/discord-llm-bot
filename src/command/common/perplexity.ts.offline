import ConfigurationManager from '@config/ConfigurationManager';
import { PerplexityApiService } from '@src/services/perplexity/PerplexityApiService';

const perplexityApiUrl = ConfigurationManager.PERPLEXITY_BASE_URL;

export async function performPerplexitySearch(query: string): Promise<any> {
    const apiService = new PerplexityApiService(perplexityApiUrl);
    return await apiService.search(query);
}
