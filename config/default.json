{
    "appName": "Discord LLM Bot",
    "llm": {
        "provider": "openai",
        "openai": {
            "chatCompletions": {
                "endpointUrl": "http://localhost:5000/v1/chat/completions",
                "model": "gpt-4o-mini",
                "maxTokens": 150,
                "temperature": 0.7,
                "stopSequences": ["\n", ".", "?", "!", "<|endoftext|>"],
                "topP": 0.9,
                "frequencyPenalty": 0.1,
                "presencePenalty": 0.05
            },
            "completions": {
                "endpointUrl": "http://localhost:5000/v1/completions",
                "model": "gpt-4o-mini",
                "maxTokens": 150,
                "temperature": 0.7,
                "topP": 0.9,
                "frequencyPenalty": 0.1,
                "presencePenalty": 0.05
            },
            "embeddings": {
                "endpointUrl": "http://localhost:5000/v1/embeddings",
                "model": "text-embedding-ada-002"
            }
        }
    },
    "messagePlatform": {
        "provider": "discord",
        "discord": {
            "clientId": "",
            "guildId": "",
            "channelId": "",
            "voiceChannelId": "",
            "unsolicitedChannelCap": 2,
            "typingDelayMinMs": 1000,
            "typingDelayMaxMs": 15000,
            "interPartDelayMs": 20000
        },
        "llm": {
            "chat": "true",
            "complete_sentence": "true",
            "follow_up": "true",
            "summarise": "true"
        },
        "command": {
            "inline": "true",
            "slash": "true",
            "authorised_users": ""
        }
    },
    "enabledModules": {
        "commandHandling": {
            "oai": "inline",
            "flowise": "inline",
            "quivr": "slash",
            "memgpt": "both",
            "http": "inline",
            "python": "inline",
            "replicate": "slash",
            "ollama": "inline",
            "moderation": "both",
            "help": "both"
        },
        "responseHandling": {
            "enabled": true,
            "interrobangBonus": 0.2,
            "mentionBonus": 0.4,
            "botResponseModifier": -0.5,
            "maxDelayMs": 10000,
            "minDelayMs": 1000,
            "decayRate": -0.5,
            "llmWakewords": "!help,!ping,!echo"
        },
        "followUp": {
            "enabled": true,
            "minDelaySec": 120,
            "maxDelaySec": 300
        }
    },
    "logging": {
        "level": "debug"
    },
    "serverPolicy": "Default server policy: Respect all members and follow community guidelines. (This policy can be configured)"
}
